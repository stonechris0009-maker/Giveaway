    <script>
        // Game elements
        const welcomeScreen = document.getElementById('welcome-screen');
        const codeScreen = document.getElementById('code-screen');
        const gameScreen = document.getElementById('game-screen');
        const endScreen = document.getElementById('end-screen');
        const startBtn = document.getElementById('start-btn');
        const submitCodeBtn = document.getElementById('submit-code');
        const codeInput = document.getElementById('code-input');
        const playAgainBtn = document.getElementById('play-again');
        const panda = document.getElementById('panda');
        const leftBtn = document.getElementById('left-btn');
        const rightBtn = document.getElementById('right-btn');
        const timeLeft = document.getElementById('time-left');
        const scoreDisplay = document.getElementById('score');
        const finalScore = document.getElementById('final-score');
        const applesEaten = document.getElementById('apples-eaten');
        const codeMessage = document.getElementById('code-message');
        const comboDisplay = document.getElementById('combo-display');
        const comboText = document.getElementById('combo');
        const highestCombo = document.getElementById('highest-combo');
        const leaderboardList = document.getElementById('leaderboard-list');
        const achievementPopup = document.getElementById('achievement-popup');
        const achievementTitle = document.getElementById('achievement-title');
        const achievementDesc = document.getElementById('achievement-desc');
        const difficultyBtns = document.querySelectorAll('.difficulty-btn');
        const musicToggle = document.getElementById('music-toggle');
        const backgroundMusic = document.getElementById('background-music');
        
        // Audio elements
        const welcomeSound = document.getElementById('welcome-sound');
        const drumSound = document.getElementById('drum-sound');
        const coinSound = document.getElementById('coin-sound');
        const eatSound = document.getElementById('eat-sound');
        const gameSound = document.getElementById('game-sound');
        const endSound = document.getElementById('end-sound');
        const bombSound = document.getElementById('bomb-sound');
        const comboSound = document.getElementById('combo-sound');
        const powerupSound = document.getElementById('powerup-sound');
        
        // Game variables
        let score = 0;
        let gameTime = 120;
        let gameInterval;
        let itemInterval;
        let pandaPosition = 180;
        const correctCode = "SVGAMING24";
        const masterKey = "20232023"; // Hidden master key
        let coins = [];
        let usedIPs = JSON.parse(localStorage.getItem('usedIPs') || '{}');
        let userIP = localStorage.getItem('userIP') || 'unknown';
        let combo = 1;
        let comboTimeout;
        let highestComboValue = 1;
        let applesCollected = 0;
        let difficulty = 'easy';
        let leaderboard = JSON.parse(localStorage.getItem('leaderboard') || '[]');
        let activePowerUps = [];
        let speedMultiplier = 1;
        let isMusicPlaying = false;
        
        // Difficulty settings
        const difficultySettings = {
            easy: { appleFrequency: 1000, bombFrequency: 5000, powerUpFrequency: 10000, speed: 1 },
            medium: { appleFrequency: 800, bombFrequency: 4000, powerUpFrequency: 8000, speed: 1.2 },
            hard: { appleFrequency: 600, bombFrequency: 3000, powerUpFrequency: 6000, speed: 1.5 }
        };
        
        // Initialize IP tracking
        async function initIP() {
            try {
                if (userIP === 'unknown') {
                    userIP = `192.168.${Math.floor(Math.random() * 255)}.${Math.floor(Math.random() * 255)}`;
                    localStorage.setItem('userIP', userIP);
                }
            } catch (error) {
                console.log("IP detection failed, using fallback");
            }
        }
        
        // Start the welcome screen with sound
        window.addEventListener('load', async () => {
            await initIP();
            welcomeSound.play().catch(e => console.log("Audio play failed:", e));
            drumSound.play().catch(e => console.log("Drum sound failed:", e));
            
            // Start background music
            setTimeout(() => {
                backgroundMusic.volume = 0.3;
                backgroundMusic.play().catch(e => console.log("Background music failed:", e));
                isMusicPlaying = true;
                musicToggle.textContent = "üîä";
            }, 1000);
            
            updateLeaderboardDisplay();
        });
        
        // Music toggle
        musicToggle.addEventListener('click', () => {
            if (isMusicPlaying) {
                backgroundMusic.pause();
                musicToggle.textContent = "üîá";
            } else {
                backgroundMusic.play();
                musicToggle.textContent = "üîä";
            }
            isMusicPlaying = !isMusicPlaying;
        });
        
        // Difficulty selection
        difficultyBtns.forEach(btn => {
            btn.addEventListener('click', () => {
                difficultyBtns.forEach(b => b.classList.remove('active'));
                btn.classList.add('active');
                difficulty = btn.dataset.difficulty;
            });
        });
        
        // Start button - go to code screen
        startBtn.addEventListener('click', () => {
            welcomeScreen.style.opacity = '0';
            welcomeScreen.style.pointerEvents = 'none';
            codeScreen.style.opacity = '1';
            codeScreen.style.pointerEvents = 'auto';
            
            // Reset code input and enable everything
            codeInput.value = '';
            codeInput.placeholder = 'Enter Code Here';
            codeInput.disabled = false;
            submitCodeBtn.disabled = false;
            codeMessage.innerHTML = '';
            codeInput.focus();
            
            startCoinAnimation();
        });
        
        // Submit code button - COMPLETELY FIXED VERSION
        submitCodeBtn.addEventListener('click', () => {
            const enteredCode = codeInput.value.trim();
            
            console.log("Submitted code:", enteredCode);
            console.log("User IP:", userIP);
            console.log("Used IPs:", usedIPs);
            
            // Check if it's the master key
            if (enteredCode === masterKey) {
                console.log("Master key accepted!");
                codeMessage.innerHTML = `<div class="success">Master key accepted! Welcome back!</div>`;
                
                setTimeout(() => {
                    codeScreen.style.opacity = '0';
                    codeScreen.style.pointerEvents = 'none';
                    gameScreen.style.opacity = '1';
                    gameScreen.style.pointerEvents = 'auto';
                    
                    stopCoinAnimation();
                    startGame();
                }, 1000);
                return;
            }
            
            // Check if it's the regular game code
            if (enteredCode.toUpperCase() === correctCode) {
                console.log("Regular code accepted!");
                
                // Check IP restriction for regular users
                if (usedIPs[userIP]) {
                    codeMessage.innerHTML = `<div class="used-code">This IP has already used the regular code!<br>Try the master key for unlimited access.</div>`;
                    return;
                }
                
                // Regular user - mark IP as used
                usedIPs[userIP] = true;
                localStorage.setItem('usedIPs', JSON.stringify(usedIPs));
                
                codeMessage.innerHTML = `<div class="success">Code accepted! Starting game...</div>`;
                
                setTimeout(() => {
                    codeScreen.style.opacity = '0';
                    codeScreen.style.pointerEvents = 'none';
                    gameScreen.style.opacity = '1';
                    gameScreen.style.pointerEvents = 'auto';
                    
                    stopCoinAnimation();
                    startGame();
                }, 1000);
            } else {
                // Wrong code
                console.log("Wrong code entered");
                codeInput.style.borderColor = 'red';
                codeInput.value = '';
                codeInput.placeholder = 'Wrong code! Try again';
                codeMessage.innerHTML = `<div class="error">Invalid code. Please try again.</div>`;
                setTimeout(() => {
                    codeInput.style.borderColor = '#FFD700';
                    codeInput.placeholder = 'Enter Code Here';
                    codeMessage.innerHTML = '';
                    codeInput.focus();
                }, 2000);
            }
        });
        
        // Allow Enter key to submit code
        codeInput.addEventListener('keypress', (e) => {
            if (e.key === 'Enter') {
                submitCodeBtn.click();
            }
        });
        
        // Make sure code input is always focusable
        codeInput.addEventListener('focus', () => {
            codeInput.style.borderColor = '#FFA500';
            codeInput.style.boxShadow = '0 0 10px rgba(255, 215, 0, 0.5)';
        });
        
        codeInput.addEventListener('blur', () => {
            codeInput.style.borderColor = '#FFD700';
            codeInput.style.boxShadow = 'none';
        });
        
        // Play again button
        playAgainBtn.addEventListener('click', () => {
            endScreen.style.opacity = '0';
            endScreen.style.pointerEvents = 'none';
            welcomeScreen.style.opacity = '1';
            welcomeScreen.style.pointerEvents = 'auto';
            welcomeSound.play();
            drumSound.play();
            
            // Restart background music if it was playing
            if (isMusicPlaying) {
                backgroundMusic.play();
            }
        });
        
        // Control buttons with smooth movement
        let moveInterval;
        
        leftBtn.addEventListener('mousedown', () => startMoving(-5));
        leftBtn.addEventListener('touchstart', () => startMoving(-5));
        leftBtn.addEventListener('mouseup', stopMoving);
        leftBtn.addEventListener('touchend', stopMoving);
        leftBtn.addEventListener('mouseleave', stopMoving);
        
        rightBtn.addEventListener('mousedown', () => startMoving(5));
        rightBtn.addEventListener('touchstart', () => startMoving(5));
        rightBtn.addEventListener('mouseup', stopMoving);
        rightBtn.addEventListener('touchend', stopMoving);
        rightBtn.addEventListener('mouseleave', stopMoving);
        
        // Keyboard controls with smooth movement
        let keys = {};
        
        document.addEventListener('keydown', (e) => {
            keys[e.key] = true;
            
            if (e.key === 'ArrowLeft') {
                startMoving(-5);
            } else if (e.key === 'ArrowRight') {
                startMoving(5);
            }
        });
        
        document.addEventListener('keyup', (e) => {
            keys[e.key] = false;
            
            if (e.key === 'ArrowLeft' || e.key === 'ArrowRight') {
                stopMoving();
            }
        });
        
        function startMoving(direction) {
            if (moveInterval) clearInterval(moveInterval);
            
            moveInterval = setInterval(() => {
                pandaPosition += direction;
                
                if (pandaPosition < 20) pandaPosition = 20;
                if (pandaPosition > 340) pandaPosition = 340;
                
                panda.style.left = pandaPosition + 'px';
            }, 16);
        }
        
        function stopMoving() {
            if (moveInterval) {
                clearInterval(moveInterval);
                moveInterval = null;
            }
        }
        
        function startCoinAnimation() {
            coinSound.play();
            const coinInterval = setInterval(() => {
                if (codeScreen.style.opacity === '0') {
                    clearInterval(coinInterval);
                    return;
                }
                
                createCoin();
            }, 300);
        }
        
        function stopCoinAnimation() {
            document.querySelectorAll('.coin').forEach(coin => coin.remove());
        }
        
        function createCoin() {
            const coin = document.createElement('div');
            coin.classList.add('coin');
            coin.style.left = Math.random() * 370 + 'px';
            coin.style.top = '-30px';
            coin.style.animationDuration = (Math.random() * 3 + 2) + 's';
            codeScreen.appendChild(coin);
            
            setTimeout(() => {
                if (coin.parentNode) {
                    coin.parentNode.removeChild(coin);
                }
            }, 5000);
        }
        
        function startGame() {
            // Reset game state
            score = 0;
            gameTime = 120;
            pandaPosition = 180;
            combo = 1;
            highestComboValue = 1;
            applesCollected = 0;
            activePowerUps = [];
            speedMultiplier = 1;
            
            // Apply difficulty settings
            const settings = difficultySettings[difficulty];
            gameTime = Math.floor(gameTime * (difficulty === 'easy' ? 1 : difficulty === 'medium' ? 0.9 : 0.8));
            
            // Update UI
            scoreDisplay.textContent = score;
            timeLeft.textContent = gameTime;
            comboText.textContent = '1x';
            comboText.classList.remove('multiplier-active');
            
            // Clear game area
            document.querySelectorAll('.apple, .bomb, .golden-apple, .power-up').forEach(item => item.remove());
            
            // Start game loops
            gameSound.play();
            gameInterval = setInterval(updateGame, 1000);
            
            // Create items based on difficulty
            itemInterval = setInterval(() => {
                createApple();
                if (Math.random() < 0.3) createBomb();
                if (Math.random() < 0.1) createGoldenApple();
                if (Math.random() < 0.05) createPowerUp();
            }, settings.appleFrequency);
        }
        
        function createApple() {
            const apple = document.createElement('div');
            apple.classList.add('apple');
            apple.textContent = 'üçé';
            
            const leftPos = Math.random() * 340 + 20;
            apple.style.left = leftPos + 'px';
            apple.style.top = '-40px';
            
            const fallSpeed = (Math.random() * 3 + 2) * difficultySettings[difficulty].speed * speedMultiplier;
            
            gameScreen.querySelector('.game-area').appendChild(apple);
            
            let appleTop = -40;
            const appleFall = setInterval(() => {
                appleTop += fallSpeed;
                apple.style.top = appleTop + 'px';
                
                const appleRect = apple.getBoundingClientRect();
                const pandaRect = panda.getBoundingClientRect();
                
                if (checkCollision(appleRect, pandaRect)) {
                    eatSound.currentTime = 0;
                    eatSound.play();
                    score += 2 * combo;
                    applesCollected++;
                    updateScore();
                    apple.remove();
                    clearInterval(appleFall);
                    
                    increaseCombo();
                    
                    panda.style.transform = 'scale(1.2)';
                    setTimeout(() => {
                        panda.style.transform = 'scale(1)';
                    }, 200);
                }
                
                if (appleTop > 500) {
                    apple.remove();
                    clearInterval(appleFall);
                    resetCombo();
                }
            }, 30);
        }
        
        function createBomb() {
            const bomb = document.createElement('div');
            bomb.classList.add('bomb');
            bomb.textContent = 'üí£';
            
            const leftPos = Math.random() * 340 + 20;
            bomb.style.left = leftPos + 'px';
            bomb.style.top = '-40px';
            
            const fallSpeed = (Math.random() * 3 + 2) * difficultySettings[difficulty].speed * speedMultiplier;
            
            gameScreen.querySelector('.game-area').appendChild(bomb);
            
            let bombTop = -40;
            const bombFall = setInterval(() => {
                bombTop += fallSpeed;
                bomb.style.top = bombTop + 'px';
                
                const bombRect = bomb.getBoundingClientRect();
                const pandaRect = panda.getBoundingClientRect();
                
                if (checkCollision(bombRect, pandaRect)) {
                    bombSound.play();
                    score = Math.max(0, score - 10);
                    updateScore();
                    bomb.remove();
                    clearInterval(bombFall);
                    
                    resetCombo();
                    
                    // Visual feedback for bomb hit
                    gameScreen.style.backgroundColor = '#ff4444';
                    setTimeout(() => {
                        gameScreen.style.backgroundColor = '';
                    }, 200);
                }
                
                if (bombTop > 500) {
                    bomb.remove();
                    clearInterval(bombFall);
                }
            }, 30);
        }
        
        function createGoldenApple() {
            const goldenApple = document.createElement('div');
            goldenApple.classList.add('golden-apple');
            goldenApple.textContent = 'üçè';
            
            const leftPos = Math.random() * 340 + 20;
            goldenApple.style.left = leftPos + 'px';
            goldenApple.style.top = '-40px';
            
            const fallSpeed = (Math.random() * 2 + 1) * difficultySettings[difficulty].speed * speedMultiplier;
            
            gameScreen.querySelector('.game-area').appendChild(goldenApple);
            
            let appleTop = -40;
            const appleFall = setInterval(() => {
                appleTop += fallSpeed;
                goldenApple.style.top = appleTop + 'px';
                
                const appleRect = goldenApple.getBoundingClientRect();
                const pandaRect = panda.getBoundingClientRect();
                
                if (checkCollision(appleRect, pandaRect)) {
                    powerupSound.play();
                    score += 20 * combo;
                    applesCollected++;
                    updateScore();
                    goldenApple.remove();
                    clearInterval(appleFall);
                    
                    increaseCombo();
                    showCombo('GOLDEN APPLE! +20');
                    
                    panda.style.transform = 'scale(1.5)';
                    setTimeout(() => {
                        panda.style.transform = 'scale(1)';
                    }, 300);
                }
                
                if (appleTop > 500) {
                    goldenApple.remove();
                    clearInterval(appleFall);
                }
            }, 30);
        }
        
        function createPowerUp() {
            const powerUp = document.createElement('div');
            powerUp.classList.add('power-up');
            powerUp.textContent = '‚ö°';
            powerUp.dataset.type = 'speed';
            
            const leftPos = Math.random() * 340 + 20;
            powerUp.style.left = leftPos + 'px';
            powerUp.style.top = '-40px';
            
            const fallSpeed = (Math.random() * 2 + 1) * difficultySettings[difficulty].speed;
            
            gameScreen.querySelector('.game-area').appendChild(powerUp);
            
            let powerUpTop = -40;
            const powerUpFall = setInterval(() => {
                powerUpTop += fallSpeed;
                powerUp.style.top = powerUpTop + 'px';
                
                const powerUpRect = powerUp.getBoundingClientRect();
                const pandaRect = panda.getBoundingClientRect();
                
                if (checkCollision(powerUpRect, pandaRect)) {
                    powerupSound.play();
                    powerUp.remove();
                    clearInterval(powerUpFall);
                    
                    activatePowerUp('speed');
                    showCombo('SPEED BOOST!');
                }
                
                if (powerUpTop > 500) {
                    powerUp.remove();
                    clearInterval(powerUpFall);
                }
            }, 30);
        }
        
        function activatePowerUp(type) {
            if (type === 'speed') {
                speedMultiplier = 0.7;
                activePowerUps.push({ type: 'speed', duration: 5000 });
                
                setTimeout(() => {
                    speedMultiplier = 1;
                    activePowerUps = activePowerUps.filter(p => p.type !== 'speed');
                }, 5000);
            }
        }
        
        function checkCollision(rect1, rect2) {
            return (
                rect1.left < rect2.right &&
                rect1.right > rect2.left &&
                rect1.top < rect2.bottom &&
                rect1.bottom > rect2.top
            );
        }
        
        function increaseCombo() {
            combo++;
            comboText.textContent = combo + 'x';
            
            if (combo > 1) {
                comboText.classList.add('multiplier-active');
                comboSound.play();
            }
            
            if (combo > highestComboValue) {
                highestComboValue = combo;
            }
            
            // Show combo message for high combos
            if (combo === 5) {
                showCombo('5x COMBO!');
                unlockAchievement('Combo Starter', 'Reached a 5x combo!');
            } else if (combo === 10) {
                showCombo('10x COMBO! AMAZING!');
                unlockAchievement('Combo Master', 'Reached a 10x combo!');
            } else if (combo === 15) {
                showCombo('15x COMBO! LEGENDARY!');
                unlockAchievement('Combo Legend', 'Reached a 15x combo!');
            }
            
            // Reset combo timeout
            clearTimeout(comboTimeout);
            comboTimeout = setTimeout(resetCombo, 3000);
        }
        
        function resetCombo() {
            if (combo > 1) {
                showCombo('COMBO BROKEN!');
            }
            combo = 1;
            comboText.textContent = '1x';
            comboText.classList.remove('multiplier-active');
        }
        
        function showCombo(message) {
            comboDisplay.textContent = message;
            comboDisplay.style.opacity = '1';
            
            setTimeout(() => {
                comboDisplay.style.opacity = '0';
            }, 1500);
        }
        
        function unlockAchievement(title, description) {
            achievementTitle.textContent = title;
            achievementDesc.textContent = description;
            achievementPopup.style.opacity = '1';
            
            setTimeout(() => {
                achievementPopup.style.opacity = '0';
            }, 3000);
        }
        
        function updateScore() {
            scoreDisplay.textContent = score;
        }
        
        function updateGame() {
            gameTime--;
            timeLeft.textContent = gameTime;
            
            if (gameTime <= 0) {
                endGame();
            }
        }
        
        function updateLeaderboardDisplay() {
            leaderboardList.innerHTML = '';
            
            // Sort leaderboard by score
            const sortedLeaderboard = [...leaderboard].sort((a, b) => b.score - a.score).slice(0, 5);
            
            if (sortedLeaderboard.length === 0) {
                leaderboardList.innerHTML = '<div class="message">No scores yet!</div>';
                return;
            }
            
            sortedLeaderboard.forEach((entry, index) => {
                const item = document.createElement('div');
                item.className = 'leaderboard-item';
                item.innerHTML = `
                    <span>${index + 1}. ${entry.name}</span>
                    <span>${entry.score}</span>
                `;
                leaderboardList.appendChild(item);
            });
        }
        
        function endGame() {
            clearInterval(gameInterval);
            clearInterval(itemInterval);
            stopMoving();
            
            document.querySelectorAll('.apple, .bomb, .golden-apple, .power-up').forEach(item => item.remove());
            
            finalScore.textContent = score;
            applesEaten.textContent = applesCollected;
            highestCombo.textContent = highestComboValue + 'x';
            
            // Add to leaderboard
            const playerName = `Player${Math.floor(Math.random() * 1000)}`;
            leaderboard.push({ name: playerName, score: score, date: new Date().toLocaleDateString() });
            localStorage.setItem('leaderboard', JSON.stringify(leaderboard));
            updateLeaderboardDisplay();
            
            // Unlock achievements based on score
            if (score >= 100) {
                unlockAchievement('Centurion', 'Scored over 100 points!');
            }
            if (score >= 250) {
                unlockAchievement('High Roller', 'Scored over 250 points!');
            }
            if (score >= 500) {
                unlockAchievement('Panda Master', 'Scored over 500 points!');
            }
            
            gameScreen.style.opacity = '0';
            gameScreen.style.pointerEvents = 'none';
            endScreen.style.opacity = '1';
            endScreen.style.pointerEvents = 'auto';
            
            gameSound.pause();
            gameSound.currentTime = 0;
            endSound.play();
            drumSound.play();
        }
    </script>
</body>
</html>
